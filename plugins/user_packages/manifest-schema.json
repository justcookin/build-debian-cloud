{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Image commands plugin manifest",
	"type": "object",
	"properties": {
		"plugins": {
			"type": "object",
			"properties": {
				"user_packages": {
					"type": "object",
					"properties": {
						"repo": {
							"type": "array",
							"items": {"type": "string"},
							"minItems": 1
						},
						"local": {
							"type": "array",
							"items": {"type": "string"},
							"minItems": 1
						}
					},
					"anyOf": [
						{"required": ["repo"]},
						{"required": ["local"]}
          ]
				}
			},
			"required": ["user_packages"]
		}
	},
	"required": ["plugins"]
}
